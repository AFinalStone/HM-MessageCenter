<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="18dp"
        android:paddingTop="18dp">

        <com.hm.iou.uikit.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="18dp"
            android:src="@mipmap/uikit_icon_header_unknow" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/iv_header"
            android:layout_alignEnd="@id/iv_header"
            android:layout_marginBottom="-1dp"
            android:layout_marginEnd="-1dp"
            tools:src="@mipmap/uikit_ic_gender_man" />

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/UikitTextView"
            android:layout_marginEnd="96dp"
            android:layout_marginStart="94dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:textSize="@dimen/textFontSize_20"
            tools:text="昵称昵称昵称昵称昵称(昵称昵称昵称昵称昵称昵称昵称)" />

        <TextView
            android:id="@+id/tv_show_id"
            style="@style/UikitTextView.Auxiliary"
            android:layout_below="@id/tv_nickname"
            android:layout_marginStart="94dp"
            android:layout_marginTop="6dp"
            tools:text="ID：12131231" />

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp" />
    </RelativeLayout>

    <TextView
        style="@style/UikitTextView.Auxiliary"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/uikit_background"
        android:gravity="center_vertical"
        android:paddingStart="18dp"
        android:text="添加方式"
        android:textSize="@dimen/textFontSize_13" />


    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="20dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/msgcenter_ic_search" />

        <TextView
            style="@style/UikitTextView.Large"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="手机号/ID号" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/uikit_ic_arrow_right" />
    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="60dp" />

    <LinearLayout
        android:id="@+id/ll_mobile_contract"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="20dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/msgcenter_ic_phone_contract" />

        <TextView
            style="@style/UikitTextView.Large"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="手机通讯录好友" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/uikit_ic_arrow_right" />
    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="60dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_sweep_qr_code"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="20dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/msgcenter_ic_qrcode" />

        <TextView
            style="@style/UikitTextView.Large"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="面对面，扫一扫" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/uikit_ic_arrow_right" />
    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="60dp" />

    <LinearLayout
        android:id="@+id/ll_add_my_self"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="20dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@mipmap/msgcenter_ic_add_myself" />

        <TextView
            style="@style/UikitTextView.Large"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="邀请好友添加自己" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/uikit_ic_arrow_right" />
    </LinearLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/UikitTextView.Auxiliary"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/uikit_background"
        android:gravity="center_vertical"
        android:paddingStart="18dp"
        android:text="等待确认"
        android:textSize="@dimen/textFontSize_13" />
</LinearLayout>