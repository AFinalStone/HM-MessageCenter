<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uikit_bg_item_ripple"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="15dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:textColor="#ff222222"
            android:textSize="@dimen/textFontSize_15" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="3月4日22点-3月5日06点，进行系统升级，可能会 出现“服务器繁忙”等异常提示，特此公告。"
        android:textColor="#ff999999"
        android:textSize="@dimen/textFontSize_15" />

    <TextView
        android:id="@+id/tv_subContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="客服微信号：jietiaoguanjia2018"
        android:textColor="#ff999999"
        android:textSize="@dimen/textFontSize_15" />

</LinearLayout>
