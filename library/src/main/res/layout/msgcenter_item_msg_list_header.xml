<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header_tips_advertisement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jietiao_bg_tips_remind_no_net"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_advertisement"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_close_advertisement"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:padding="19dp"
            android:src="@mipmap/uikit_icon_close_black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_header_tips_no_net"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/jietiao_bg_tips_remind_no_net"
        android:gravity="center"
        android:text="当前网络不可用，请检查你的网络设置"
        android:textColor="@color/uikit_function_exception"
        android:textSize="@dimen/textFontSize_12"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="vertical" />

</LinearLayout>
