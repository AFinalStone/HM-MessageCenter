<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_add_new_friend"
        style="@style/MsgCenterMsgListHeaderItem">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/msgcenter_ic_add_new_friend" />

        <TextView
            style="@style/MsgCenterMsgListHeaderItemTitle"
            android:text="添加好友"
            android:textSize="@dimen/textFontSize_18" />


    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginStart="64dp" />


</LinearLayout>
