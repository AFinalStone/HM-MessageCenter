<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uikit_background"
    android:orientation="vertical">

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:titleText="@string/messagecenter_msg_center" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        app:srlAccentColor="@android:color/white"
        app:srlEnableLoadMore="false"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#444444">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center">

            <com.hm.iou.uikit.PullDownRefreshImageView
                android:id="@+id/iv_msg_refresh"
                android:layout_width="40dip"
                android:layout_height="40dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_msgList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_data_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="93dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/msgcenter_icon_empty" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="@string/messagecenter_no_msg"
                    android:textColor="#ffbbbbbb"
                    android:textSize="@dimen/textFontSize_18" />

            </LinearLayout>


        </RelativeLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.hm.iou.uikit.HMLoadingView
        android:id="@+id/loading_init"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:background="@color/uikit_background" />

</RelativeLayout>

