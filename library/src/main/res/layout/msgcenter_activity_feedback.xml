<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        app:titleBackground="#00000000"
        app:titleText="意见反馈"
        />

    <TextView
        android:id="@+id/tv_feedback_top_type"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text=""
        android:textColor="#ff222222"
        android:textSize="14sp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:gravity="center_vertical"
        tools:text="#收不到验证码#"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_mContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|top"
                android:hint="请填写5-200个字的问题描述，以便我们更好的帮你处理结果"
                android:minHeight="186dp"
                android:paddingBottom="11dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:maxLength="200"
                android:lineSpacingMultiplier="1.3"
                android:paddingTop="11dp"
                android:textColor="#ff222222"
                android:textColorHint="#ffa3a3a3"
                android:textSize="@dimen/textFontSize_15" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textColor="#ffa3a3a3"
            android:textSize="@dimen/textFontSize_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="/200"
            android:textColor="#ffa3a3a3"
            android:textSize="@dimen/textFontSize_12" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_feedback_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginBottom="15dip"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFE3E3E3" />

    <LinearLayout
        android:id="@+id/linearLayout_type"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="?android:attr/selectableItemBackground"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型："
            android:textColor="#ff666666"
            android:textSize="@dimen/textFontSize_16" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ff666666"
            android:textSize="@dimen/textFontSize_16" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/uikit_ic_arrow_right" />

    </LinearLayout>
</LinearLayout>
