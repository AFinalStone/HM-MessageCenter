<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_friend_item"
        style="@style/MsgCenterMsgListHeaderItem">

        <com.hm.iou.uikit.ShapedImageView
            android:id="@+id/iv_header"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            app:shape_mode="circle" />

        <TextView
            android:id="@+id/tv_nick"
            style="@style/MsgCenterMsgListHeaderItemTitle"
            android:textSize="@dimen/textFontSize_14"
            tools:text="昵称" />


    </LinearLayout>

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_marginStart="64dp" />


</LinearLayout>
