<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_verify_label"
        style="@style/UikitTextView.Auxiliary.Normal"
        android:text="您需要发送验证申请，等待对方通过"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="45dip"
        />

    <EditText
        android:id="@+id/et_verify_content"
        style="@style/UikitEditText.Normal.TextArea"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:minHeight="30dip"
        android:maxLength="18"
        android:hint=""
        android:singleLine="true"
        android:layout_below="@id/tv_verify_label"
        />

    <Button
        android:id="@+id/btn_verify_send"
        style="@style/UikitHMButton.Large.Main"
        android:layout_below="@id/et_verify_content"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:layout_marginTop="40dip"
        android:text="发送"
        />

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_above="@+id/ll_friend_bottom" />

    <com.hm.iou.uikit.HMBottomBarView
        android:id="@+id/ll_friend_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        app:bottomBackText="添加朋友" />



</RelativeLayout>