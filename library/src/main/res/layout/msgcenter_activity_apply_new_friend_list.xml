<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uikit_background"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/uikit_status_bar_height"
        app:elevation="0dp">

        <include layout="@layout/msgcenter_layout_apply_new_friend_list_header" />

        <TextView
            style="@style/UikitTextView.Auxiliary"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/uikit_background"
            android:gravity="center_vertical"
            android:paddingStart="18dp"
            android:text="等待确认"
            android:textSize="@dimen/textFontSize_13" />

    </android.support.design.widget.AppBarLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlAccentColor="@android:color/white"
        app:srlEnableLoadMore="false"
        app:srlEnablePreviewInEditMode="true"
        app:srlEnableRefresh="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center">

            <com.hm.iou.uikit.PullDownRefreshImageView
                android:id="@+id/iv_msg_refresh"
                android:layout_width="40dip"
                android:layout_height="40dip" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_msgList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.hm.iou.uikit.HMBottomBarView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="bottom"
        app:bottomTitleIcon="@mipmap/uikit_ic_more_black" />
</android.support.design.widget.CoordinatorLayout>

