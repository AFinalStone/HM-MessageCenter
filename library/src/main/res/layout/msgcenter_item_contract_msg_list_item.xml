<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="3dp">

    <TextView
        android:id="@+id/tv_time"
        style="@style/UikitTextView.Auxiliary.Small"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/uikit_text_hint"
        tools:text="星期六 上午 10:00" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jietiao_bg_message_list_item"
        android:minHeight="85dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            android:scaleType="fitXY"
            android:src="@mipmap/msgcenter_ic_contract_flag" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/UikitTextView"
            android:layout_marginStart="62dp"
            android:layout_marginTop="19dp"
            tools:text="合同创建成功 " />

        <TextView
            android:id="@+id/tv_content"
            style="@style/UikitTextView.Auxiliary.Small"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="62dp"
            android:layout_marginTop="6dp"
            tools:text="小希女士，您的合同已创建成功 小希女士，您的合同已创建成功 小希女士，您的合同已创建成功 小希女士，您的合同已创建成功 小希女士，您的合同已创建成功  " />
    </RelativeLayout>

</LinearLayout>
