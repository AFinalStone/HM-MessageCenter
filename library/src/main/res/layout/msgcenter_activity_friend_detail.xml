<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <View
        style="@style/UikitDivider.Horizontal"
        android:layout_above="@+id/ll_friend_bottom" />

    <com.hm.iou.uikit.HMBottomBarView
        android:id="@+id/ll_friend_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        app:bottomBackText="详细资料" />

    <ImageView
        android:id="@+id/iv_friend_more"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="center"
        android:src="@mipmap/uikit_ic_more_black" />


    <RelativeLayout
        android:id="@+id/rl_friend_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:layout_marginTop="60dip"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        >

        <com.hm.iou.uikit.ShapedImageView
            android:id="@+id/iv_friend_avatar"
            android:layout_width="60dip"
            android:layout_height="60dip"
            app:shape_mode="circle"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dip"
            android:layout_toRightOf="@id/iv_friend_avatar"
            >
            <TextView
                android:id="@+id/tv_friend_name1"
                style="@style/UikitTextView"
                android:textColor="@color/uikit_text_main_content"
                android:textSize="20dip"
                tools:text="小狼狗"
                />

            <TextView
                android:id="@+id/tv_friend_name2"
                style="@style/UikitTextView.Auxiliary.Normal"
                android:layout_marginTop="6dip"
                android:textColor="@color/uikit_text_sub_content"
                tools:text="昵称：10000"
                />

            <TextView
                android:id="@+id/tv_friend_id"
                style="@style/UikitTextView.Auxiliary.Normal"
                android:layout_marginTop="6dip"
                android:textColor="@color/uikit_text_sub_content"
                tools:text="ID：10000"
                />
        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/view_friend_divider"
        style="@style/UikitDivider.Horizontal"
        android:layout_below="@id/rl_friend_info"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="20dip"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/view_friend_divider"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:layout_marginTop="20dip"
            >
            <TextView
                style="@style/UikitTextView"
                android:textColor="@color/uikit_text_main_content"
                android:textSize="16dip"
                android:layout_weight="1"
                android:text="用户类型"
                />

            <TextView
                android:id="@+id/tv_friend_type"
                style="@style/UikitTextView"
                android:textColor="@color/uikit_text_auxiliary"
                android:textSize="16dip"
                android:layout_weight="1"
                android:gravity="right"
                tools:text="实名用户"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:layout_marginTop="20dip"
            >
            <TextView
                style="@style/UikitTextView"
                android:textColor="@color/uikit_text_main_content"
                android:textSize="16dip"
                android:layout_weight="1"
                android:text="常驻城市"
                />

            <TextView
                android:id="@+id/tv_friend_city"
                style="@style/UikitTextView"
                android:textColor="@color/uikit_text_auxiliary"
                android:textSize="16dip"
                android:layout_weight="1"
                android:gravity="right"
                tools:text="杭州"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:layout_marginTop="20dip"
            android:visibility="gone"
            >
            <TextView
                style="@style/UikitTextView"
                android:textColor="@color/uikit_text_main_content"
                android:textSize="16dip"
                android:layout_weight="1"
                android:text="附加信息"
                android:layout_width="150dip"
                />

            <TextView
                android:id="@+id/tv_friend_comment"
                style="@style/UikitTextView"
                android:textColor="@color/uikit_text_auxiliary"
                android:textSize="16dip"
                android:layout_weight="1"
                android:gravity="right"
                tools:text="我是小管家"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/uikit_ic_about"
                android:tint="@color/uikit_function_remind"
                android:backgroundTint="@color/uikit_function_remind"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已添加对方至黑名单"
                android:textColor="@color/uikit_function_remind"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btn_friend_submit"
            style="@style/UikitHMButton.Large.Main"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            tools:text="发消息"
            />

    </LinearLayout>

</RelativeLayout>