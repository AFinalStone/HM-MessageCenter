<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2f2f2"
    >

    <com.hm.iou.uikit.HMTopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uikit_topbar_height"
        app:titleText="历史反馈"
        />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartrl_feedback_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableAutoLoadMore="true"
        app:srlEnableLoadMore="false"
        android:layout_below="@id/topbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            >
            <com.hm.iou.uikit.PullDownRefreshImageView
                android:id="@+id/iv_feedback_refresh"
                android:layout_width="40dip"
                android:layout_height="40dip"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_feedback_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.hm.iou.uikit.HMLoadingView
        android:id="@+id/lv_feedback_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        />

</RelativeLayout>