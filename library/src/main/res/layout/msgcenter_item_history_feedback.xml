<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uikit_bg_item_ripple"
    android:padding="15dip"
    >

    <TextView
        android:id="@+id/tv_feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff222222"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="40dip"
        tools:text="收不到验证码"
        />

    <TextView
        android:id="@+id/tv_feedback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff999999"
        android:textSize="11sp"
        android:layout_marginTop="8dip"
        android:layout_below="@id/tv_feedback_title"
        tools:text="2018-04-09 17:25"
        />

    <TextView
        android:id="@+id/tv_feedback_status"
        android:layout_width="33dp"
        android:layout_height="16dp"
        android:text=""
        android:textColor="#ff222222"
        android:textSize="11sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dip"
        android:layout_alignTop="@id/tv_feedback_time"
        tools:text="未处理"
        />

</RelativeLayout>